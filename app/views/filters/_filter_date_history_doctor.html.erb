<%= form_with url: "/appointments", method: :get do |form| %>
    <%= csrf_meta_tags %>
    <div class="row">
        <div class="col s12 m6">
            <fieldset class="field-set-style">
                <legend class="legend-style">Fecha desde</legend>
                <%= form.date_field :ini_date, style:"height: 100%; padding:none; border-bottom: none;"  %>
            </fieldset>
        </div>
        <div class="col s12 m6">
            <fieldset class="field-set-style">
                <legend class="legend-style">Fecha hasta</legend>
                <%= form.date_field :end_date, style:"height: 100%; padding:none; border-bottom: none;"  %>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m8"></div>
        <div class="col s12 m4"><%= form.submit 'Filtrar', class: 'submit_style'%></div>
    </div>

<% end %>