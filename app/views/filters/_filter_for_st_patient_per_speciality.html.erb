<div class="row">
    <div class="col s12 m12">
      <div class="card" style="width: 96%; margin-left:2%; margin-right:2%; margin-top:1%;">
        <div class="card-content">
            <div class="row">
                <div class="col s12 m12">
                    <h6 style ="font-family: FuturaStd Medium; margin-bottom: 20px; margin-top:20px;" >Estadistica de Pacientes Atendidos por Área o Especialidad</h6>
                    <%= form_with url: "/statistics-pacientes-por-especialidad", method: :get do |form| %>
                        <%= csrf_meta_tags %>
                        <div class="row">
                            <div class="col s12 m6">
                                <fieldset class="field-set-style">
                                    <legend class="legend-style">Fecha desde</legend>
                                    <%= form.date_field :ini_date, style:"height: 100%; padding:none; border-bottom: none;", onchange: "setValuesFilterForPrint()"  %>
                                </fieldset>
                            </div>
                            <div class="col s12 m6">
                                <fieldset class="field-set-style">
                                    <legend class="legend-style">Fecha hasta</legend>
                                    <%= form.date_field :end_date, style:"height: 100%; padding:none; border-bottom: none;", onchange: "setValuesFilterForPrint()"  %>
                                </fieldset>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m6">
                                <fieldset class="field-set-style">
                                    <legend class="legend-style">Área o Especialidad</legend>
                                    <% form.text_field :area, style:"height: 100%; padding:none; border-bottom: none;", onchange: "setValuesFilterForPrint()"  %>
                                    <%= form.select :area, options_from_collection_for_select(@areas, "id", "name"), include_blank: true, style:"height: 100%; padding:none; border-bottom: none;" %>  
                                </fieldset>
                            </div>
                            <div class="col s12 m4"></div>
                            <div class="col s12 m2"><%= form.submit 'Filtrar', class: 'submit_style', style: "margin-bottom: -30px;"%></div>
                        </div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



