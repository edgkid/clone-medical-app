<div class="row">
  <div class="col s12 m12">
    <div class="card"style="margin-top:2%; width:96%; margin-left:2%; margin-right:2%;">
      <div class="card-header">
          <h6 style="margin-left:1%; margin-top:1%; font-family: FuturaStd Medium;">Registro de publicidad</h6>
           <div class="row">
            <div class="col s12 m10"></div>
              <div class="col s12 m2"> 
                  <a class=" modal-trigger" style=" margin-bottom: 10px;" href="/publicidad/create">
                    <i class="material-icons">add_circle</i>
                    Publicidad
                  </a>
              </div>
          </div>
      </div>
      <div class="card-content">
        <table id="DataTableId" style="width:100%">
            <thead>
              <tr>
                <th scope="col" style="font-family: FuturaStd Medium;">Código</th>
                <th scope="col" style="font-family: FuturaStd Medium;">Estatus</th>
                <th scope="col" style="font-family: FuturaStd Medium;">Descripción</th>
                <th scope="col" style="font-family: FuturaStd Medium;"></th>
              </tr>
            </thead>
            <tbody>
              <% @offers.each do |offer| %>
                <tr>
                  <td style="font-family: FuturaStd Medium;"><%= offer.code_offer  %></td>
                  <td style="font-family: FuturaStd Medium;"><%= offer.status  %></td>
                  <td style="font-family: FuturaStd Medium;"><%= offer.description  %></td>
                  <td style="font-family: FuturaStd Medium;">
                    <a class=" modal-trigger" style=" margin-bottom: 10px;" href="/publicidad/edit/<%= offer.id  %>">
                      <i class="material-icons">edit</i>
                      Editar
                    </a>
                  </td>
                </tr>
              <% end %>                
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>