<div class="row">
    <div class="col s12 m12">
      <div class="card" style="width: 80%; margin-left: 10%; margin-right:10%; margin-top:10%;">
        <div class="card-header">
            <h6 style="margin-left:2%; margin-top:2%; font-family: FuturaStd Medium;">Editar Datos Usuario</h6>
        </div>
        <div class="card-content">
            <%= form_with model: @user, url: "/admin-users/edit/"+@user.id.to_s, method: :post, id: "formulario" do |form| %>
                <%= csrf_meta_tags %>

                <div class="row">                     
                    <div class="col s12 m12">
                        <fieldset class="field-set-style" id="group_email">
                            <legend class="legend-style">Correo electr√≥nico</legend>
                            <%= form.email_field :email, autofocus: true, autocomplete: "email", value: @user.email, style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
                        </fieldset>
                    </div>
                </div>

                <div class="row">                     
                    <div class="col s12 m12">
                        <fieldset class="field-set-style">
                            <legend class="legend-style">Estatus</legend>
                            <%= form.select "status", options_for_select([ "Activo", "Inactivo" ], @user.status), style:"height: 100%; padding:none; border-bottom: none; background:none;"%>
                        </fieldset>
                    </div>
                </div>


                <div class="row">                     
                    <div class="col s12 m10"></div>
                    <div class="col s12 m2">
                        <%= form.submit "Guardar", class:"btn", style: 'width:100%; background: #039BE5; border-radius:10px;' %>
                    </div>
                </div>


            <% end %>
        </div>
    </div>
</div>