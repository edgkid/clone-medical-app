<div class="row">
    <div class="col s12 m12">
      <div class="card" style="width: 80%; margin-left: 10%; margin-right:10%; margin-top:10%;">
        <div class="card-header">
            <h6 style="margin-left:2%; margin-top:2%; font-family: FuturaStd Medium;">Nuevo Usuario</h6>
        </div>
        <div class="card-content">
            <%= form_with model: @user, url: admin_users_new_path , id:"formulario" do |form| %>
                <%= csrf_meta_tags %>

                <div class="row">                     
                    <div class="col s12 m12">
                        <fieldset class="field-set-style" id="group_email">
                            <legend class="legend-style">Correo electr√≥nico</legend>
                            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Correo electronico', style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
                        </fieldset>
                    </div>
                </div>

                <div class="row">                     
                    <div class="col s12 m12">
                        <fieldset class="field-set-style" id="group_email">
                            <legend class="legend-style">Tipo de Usuario</legend>
                             <%= form.select "type", options_for_select([ "Paciente", "Doctor", "Caja", "Convenio", "Principal", "Root" ]), prompt: "Indique tipo de usuario", style:"height: 100%; padding:none; border-bottom: none; background:none;"%>
                        </fieldset>
                    </div>
                </div>

                 <div class="row">                     
                    <div class="col s12 m12">
                        <fieldset class="field-set-style" id="group_email">
                            <legend class="legend-style">Password generico</legend>
                             medi-chat123
                        </fieldset>
                    </div>
                </div>


               

                <div class="row">                     
                    <div class="col s12 m10"></div>
                    <div class="col s12 m2">
                        <%= form.submit "Guardar", class:"btn", style: 'width:100%; background: #039BE5; border-radius:10px;' %>
                    </div>
                </div>


            <% end %>
        </div>
    </div>
</div>