<style>
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    img{
        width: 100%;
        height: auto;
    }

    .row{
        width: 50%;
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 10px 0px;    
        justify-content: center;
    }

    @media only screen and (max-width : 992px) {
        .row {
            width: 100%;
        }
    }
    input, button{
        width: 100%;
        margin: 0;
        padding: 10px
    }

    button {
        border: 0;
        color: white;
        cursor: pointer;
        padding: 10px
    }

    button.login{
        background-color: #2296f2;  
    }

    button.signup{
        background-color: #f94181;  
    }

    .errors{
        width: 100%;
        padding: 10px;
        background-color: #ff6161;
        color: white;
    }

    .input_style{
      border: 1px solid 	#00008B;
    }

</style>

<%= form_with model: @password_request, url: salvar_password_path do |form| %>

  <div class="container">
    <div class='login-container'>
      <div class="row">
        <%= image_tag "logo.png" %>            
      </div>

    <div class="row">                     
        <div class="col s12 m12">
            <%= render partial: 'layouts/flash' %>
        </div>
     </div>

      

      <div class="row">
        <p style="font-family: FuturaStd Medium text-align: center; margin-bottom:0px; margin-top:0px;">Introduce su correo para generar una solicitud de recuperación de password.</p>
      </div>

      <!-- Aqui va mensaje de error--> 

      <div class="row">                     
        <div class="col s12 m12">
            <fieldset class="field-set-style">
                <legend class="legend-style">Correo electrónico</legend>
                <%= form.email_field :user_name, autofocus: true, autocomplete: "email", placeholder: " correo electrónico", style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
            </fieldset>
        </div>
     </div>

    <div class="row">                     
        <div class="col s12 m12">
            <%= form.submit "Enviar solicitud", class: 'btn', style: "color: white; background:#2296f2; border:none;" %>
        </div>
    </div>

    </div>
  </div>
  
<% end %>

