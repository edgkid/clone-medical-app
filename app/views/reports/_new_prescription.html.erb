<%= form_with model: @prescription, url: '/new-prescription-by-Appointment', method: :post do |form| %>
        <%= csrf_meta_tags %>

        <%= form.text_field :doctor_id, value: @chat.doctor_id, hidden: true %>
        <%= form.text_field :patient_id, value: @chat.patient_id, hidden: true %>

        <div class="row">
            <div class="col s12 m12">
                <fieldset class="field-set-style" id="group_name" style="padding: 0px;">
                    <legend class="legend-style" style="margin-left:2%;">Medicinas</legend>
                      <%= form.text_area :medicine, size: "60x30", class: 'textarea_style', placeholder: 'Indique medicamentos.....', style:"border:none;" %>
                </fieldset>
            </div>
        </div>

        <div class="row">
            <div class="col s12 m12">
                <fieldset class="field-set-style" id="group_name" style="padding: 0px;">
                    <legend class="legend-style" style="margin-left:2%;">Indicaciones</legend>
                      <%= form.text_area :use, size: "60x30", class: 'textarea_style', placeholder: 'Indicaciones de tratamiento.....', style:"border:none;" %>
                </fieldset>
            </div>
        </div>

        <div class="row" >
            <div class="col s12 m4">
                <%= form.submit 'Guardar', class: 'submit_style close-call'%>
            </div>
        </div>


<% end %>

