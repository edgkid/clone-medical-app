<div style="width: 96%; margin-left: 2%; margin-right: 2%">
    <ul class="collapsible"> 
        <li>
        <div class="collapsible-header">
            <i class="material-icons">assignment</i>
                <p style="font-family: FuturaStd Medium; padding:0px;">Última Consulta</p>
            </div>
        <div class="collapsible-body">
            <%if @appointment[0]%>
                <div class="row">
                    <div class="col s12 m6">

                        <p style="font-family: FuturaStd Medium"><b>Número de caso:</b> <%= @appointment[0]&.case_number || '-'  %> </p>
                        <p style="font-family: FuturaStd Medium"><b>Fecha de consulta <%= @appointment[0]&.created_at&.strftime("%d-%m-%Y %H:%M") || '-' %></b></p>
                        
                        
                    </div>
                    <div class="col s12 m6"></div>
                </div>
            <% else %>
                <p style="font-family: FuturaStd Medium"><b>No posee citas registrada</b></p>
            <% end %>
            
        </li>
    </ul>
</div>
