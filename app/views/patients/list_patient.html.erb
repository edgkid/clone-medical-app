<div class="row">
    <div class="col s12 m12">
      <div class="card" style="width: 96%; margin-left: 2%; margin-right:2%; margin-top:5%;">
            <div class="card-header">
                <h6 style="margin-left:3%; margin-top:5%,">Pacientes Registrados</h6>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col s12 m10"></div>
                        <div class="col s12 m2">
                            <a style=" margin-bottom: 10px;" href="/admin-patients/new">
                            <i class="material-icons">add_circle</i>
                            Paciente
                            </a>
                        </div>
                </div>
                <table  id="DataTableId" class="table table-striped table_app_style" style="width: 96%; margin-left:2%; margin-right:2%;">
                    <thead>
                        <tr>
                            <th scope="col" style="font-family: FuturaStd bold;">Usuario</th>
                            <th scope="col" style="font-family: FuturaStd bold;">Paciente</th>
                            <th scope="col" style="font-family: FuturaStd bold;">Sexo</th>
                            <th scope="col" style="font-family: FuturaStd bold;">Asegurado</th>
                            <th scope="col" style="font-family: FuturaStd bold;">Estatus</th>
                            <th scope="col" style="font-family: FuturaStd bold;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if @patients != nil %>
                            <% @patients.each do |patient|%>
                                <tr>
                                    <td style="font-family: FuturaStd Medium;"><%= patient.user.email   %></td>
                                    <td style="font-family: FuturaStd Medium;"><%= patient.name + " " + patient.last_name %></td>
                                    <td style="font-family: FuturaStd Medium;"><%= patient.gender %></td>
                                    <% if patient.insured_patients.length > 0 %>
                                        <td style="font-family: FuturaStd Medium;">Si</td>
                                    <% else %>
                                         <td style="font-family: FuturaStd Medium;">No</td>
                                    <% end %>
                                    <td style="font-family: FuturaStd Medium;"><%= patient.status %></td>
                                    <% if patient.insured_patients.length > 0 %>
                                        <td style="font-family: FuturaStd Medium;">N/A</td>
                                    <% else %>
                                         <td style="font-family: FuturaStd Medium;">
                                            <a style=" margin-bottom: 10px;" href="/admin-patients/asignar-seguro/<%= patient.id %>">
                                                <i class="material-icons">add_to_photos</i>
                                                Asignar Seguro
                                            </a>
                                        </td>
                                    <% end %>

                                </tr>
                            <% end %>
                        <% end %>
                    <tbody>
            </div>
        </div>
    </div>
</div>