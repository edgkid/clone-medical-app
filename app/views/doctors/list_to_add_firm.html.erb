<div class="row">
    <div class="col s12 m12">
      <div class="card" style="width: 96%; margin-left: 2%; margin-right:2%; margin-top:2%;">
            <div class="card-header">
                <h6 style="margin-left:2%; margin-top:2%; font-family: FuturaStd Medium;">Médicos Registrados</h6>
            </div>
            <div class="card-content">
                <table id="DataTableId" class="table table-striped table_app_style" style="width: 96%; margin-left:2%; margin-right:2%;">
                    <thead>
                        <tr>
                            <th scope="col" style="font-family: FuturaStd Medium;">Usuario</th>
                            <th scope="col" style="font-family: FuturaStd Medium;">Médico</th>
                            <th scope="col" style="font-family: FuturaStd Medium;">Genero</th>
                            <th scope="col" style="font-family: FuturaStd Medium;">Posee firma</th>
                            <th scope="col" style="font-family: FuturaStd Medium;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if @doctors != nil %>
                            <% @doctors.each do |doctor|%>
                                <tr>
                                    <td style="font-family: FuturaStd Medium;"><%= doctor.user.email   %></td>
                                    <td style="font-family: FuturaStd Medium;"><%= doctor.name + " " + doctor.last_name %></td>
                                    <td style="font-family: FuturaStd Medium;"><%= doctor.gender %></td>
                                    <td style="font-family: FuturaStd Medium;">
                                        <%if doctor.firm != nil  %>
                                            Si
                                        <% else %>
                                            No
                                        <% end %>
                                    </td>
                                    <td style="font-family: FuturaStd Medium;">
                                        <a style=" margin-bottom: 10px;" href="/admin-doctors/upload-firm/<%= doctor.id.to_s %>">
                                            <i class="material-icons">edit</i>
                                            Agregar firma
                                        </a>
                                    </td>
                                </tr>
                            <% end%>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
