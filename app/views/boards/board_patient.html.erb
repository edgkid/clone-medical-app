<% if @offers.length > 0%>

    <div class="carousel" style="margin-top: -70px; margin-bottom: -70px;">
        <% @offers.each do |offer| %>
            <a class="carousel-item" href="#<%= offer.code_offer %>">
                <img src="<%= offer.image %>" style="width:100%; height:100%;">
            </a>
        <% end %>
        <a class="carousel-item" href="#">
            <img src="assets/default.png">
        </a>
       
    </div>

<% end %>

<%- if current_user.patient%>

    <%= render 'patients/board_plan', object: @patient_plan %> 

    <%= render 'patients/board_appointment', object: @appointment %>    
    
<%else %>
