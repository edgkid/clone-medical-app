<style>
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    img{
        width: 100%;
        height: auto;
    }

    .row{
        width: 30%;
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 10px 0px;    
        justify-content: center;
    }

    @media only screen and (max-width : 992px) {
        .row {
            width: 100%;
        }
    }
    input, button{
        width: 100%;
        margin: 0;
        padding: 10px
    }

    button {
        border: 0;
        color: white;
        cursor: pointer;
        padding: 10px
    }

    button.login{
        background-color: #2296f2;  
    }

    button.signup{
        background-color: #f94181;  
    }

    .errors{
        width: 100%;
        padding: 10px;
        background-color: #ff6161;
        color: white;
    }

    .input_style{
      border: 1px solid 	#00008B;
    }

</style>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class='login-container'>

    <div class="row">
      <%= image_tag "logo.png" %>            
    </div>

    <div class="row">
      <p style="font-family: FuturaStd bold;">indique su correo para enviar instrucciones.</p>          
    </div>

    <div class="row">
     <!-- Aqui va mensaje de error-->      
    </div>

    <div class="row">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electronico", style: 'border: 1px solid #A4A4A4;' %>
    </div>

     <div class="row">
      <%= f.submit "Enviar instrucciones", class:"btn", style: "width:100%; color: white; background:#2296f2; border:none;"  %>
    </div>
     

    <div class="row">
      <%= link_to "Registrar cuenta", new_registration_path(resource_name), style:"font-family: FuturaStd bold;" %>
    </div>

    <%= link_to "Iniciar sesiÃ³n", new_session_path(resource_name),style:"font-family: FuturaStd bold;" %><br />

  </div>
  
<% end %>
