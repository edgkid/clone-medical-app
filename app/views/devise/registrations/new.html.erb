<style>
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    img{
        width: 100%;
        height: auto;
    }

    .row{
        width: 50%;
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 10px 0px;    
        justify-content: center;
    }

    @media only screen and (max-width : 992px) {
        .row {
            width: 100%;
        }
    }
    input, button{
        width: 100%;
        margin: 0;
        padding: 10px
    }

    button {
        border: 0;
        color: white;
        cursor: pointer;
        padding: 10px
    }

    button.login{
        background-color: #2296f2;  
    }

    button.signup{
        background-color: #f94181;  
    }

    .errors{
        width: 100%;
        padding: 10px;
        background-color: #ff6161;
        color: white;
    }

    .input_style{
      border: 1px solid 	#00008B;
    }

    .select-wrapper input.select-dropdown {
      position: relative;
      cursor: pointer;
      background-color: transparent;
      border: none;
      /*border-bottom: 1px solid #9e9e9e;*/
      outline: none;
      height: 100%%;
      line-height: 3rem;
      width: 100%;
      font-size: 16px;
      margin: 0 0 8px 0;
      padding: 0;
      display: block;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      z-index: 1;
  }

</style>

</div style="width:90%; margin-left:5%; marin-right:5%;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="container">
      <div class='login-container'>

        <div class="row">
          <%= image_tag "logo.png" %>            
        </div>

        <div class="row">
          <p style="font-family: FuturaStd Medium text-align: center; margin-bottom:0px; margin-top:0px;">Introduzca sus datos para el registro.</p>
        </div>
        
        <!-- Aqui va mensaje de error--> 

        <%= f.text_field :user_type, value: "Paciente", hidden: true%>
        <div class="row">                     
          <div class="col s12 m12">
              <fieldset class="field-set-style" id="group_email">
                  <legend class="legend-style">Correo electrónico</legend>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Correo electronico', style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
              </fieldset>
          </div>
        </div>

        <div class="row">                     
          <div class="col s12 m12">
              <fieldset class="field-set-style">
                  <legend class="legend-style">Password</legend>
                  <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
              </fieldset>
          </div>
        </div>

        <div class="row">                     
          <div class="col s12 m12">
              <fieldset class="field-set-style">
                  <legend class="legend-style">Repetir password</legend>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'confirmar password', style:"height: 100%; padding:none; border-bottom: none; background:none;" %>
              </fieldset>
          </div>
        </div>


        <div class="row">                     
          <div class="col s12 m12">
              <%= f.submit "Registrarse", class:"btn", style: 'width:100%; background: #f94181;' %>
          </div>
        </div>

        <div class="row">                     
          <div class="col s12 m12">
            <p style="text-align:center; margin-bottom:0px; margin-top:0px;"><%= link_to "Iniciar sesión", new_session_path(resource_name), style:"font-family: FuturaStd bold;" %></p>
          </div>
        </div>

      </div>
    </div>

    

  <% end %>
</div>