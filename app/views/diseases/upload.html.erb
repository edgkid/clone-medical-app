<div class="row" >
    <div class="col s12 m12">
        <div class="card" style="width: 98%; margin-left:1%;">
            <div class="card-content">
            <h6 style="font-family: FuturaStd Medium; padding:0px;">Resultado de corrida</h6>
            </div>
            <div class="card-content">
                <div class="row" >
                    <div class="col s12 m4">
                        <p style="font-family: FuturaStd Medium; padding:0px;"> Total diagnósticos: <%= @disease.length %> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    
    <div class="col s12 m4">
        <ul class="collapsible" style="width:96%; margin-left:2%; margin-right:2%; margin-top: 5%;"> 
            <li>
                <div class="collapsible-header">
                    <i class="material-icons">file_upload</i>
                    <p style="font-family: FuturaStd Medium; padding:0px;">Cargar Diagnósticos</p>
                </div>
                <div class="collapsible-body">
                    <div class="row">
                        <div class="col s12 m12">
                            <%= form_with url: enfermedades_carga_masiva_save_path, method: :post do |f| %>

                                <%= csrf_meta_tags %>

                                    <div class="row">
                                        <div class="col s12 m12">
                                            <input type="file" id="filecsvDiagnostic" class="form-control" accept=".csv" required>
                                            <input id="file_name_diagnostic" type="text" name="file_name" value="" hidden >
                                            <input id="nameDiagnostic" type="text" name="name" value="" hidden >
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12 m12">
                                            <%= f.submit "Iniciar carga de datos", class: "submit_style" %>
                                        </div>
                                    </div>

                            <% end %>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
